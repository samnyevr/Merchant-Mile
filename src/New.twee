window.typewriter = function (element, text, speed = 1, batchSize = 5) {
    let i = 0;
    function type() {
        if (i < text.length) {
            element.innerHTML += text.slice(i, i + batchSize);  // Add characters in batches
            i += batchSize;
            setTimeout(type, speed);
        }
    }
    type();
};

